class cr{ //cr이라는 변수를 내가 정의 내림
  float x,y,d; // xyd와op라는 변수 만듬
int op;
cr(float a, float b, float c, int e) {x=a; y=b; d=c; op=e;}// cr이란 변수 안에 a,b,c,e라는cr대응 
//변수 만들고 이는 x,y,d,op라고 새로 정의내림
void display(){ 
  if(op==0) fill(255,0,0);
  else if(op==1) fill(0,255,0);
  else if (op==2) fill(0,0,255);
  else fill(255);
circle(x,y,d); circle(x+d,y,d);
circle(x,y+d,d); circle(x+d,y+d,d);
}
}
